<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="left|center"
                android:orientation="horizontal">

                <smart.cst.pwc.CustomFontTextView
                    android:id="@+id/itemtittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:text="Crop details"
                    android:textAllCaps="false"
                    android:textColor="@color/jaguar"
                    android:textSize="20dp"
                    app:fontName="maven" />

                <ImageView
                    android:id="@+id/itemclose"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:src="@drawable/ic_close_black_24dp"
                    android:tint="@color/jaguar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.75"
                        android:padding="@dimen/paddingimg"
                        android:src="@drawable/ic_bubble_chart_black_24dp"
                        android:tint="@color/colortint" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.25">

                        <smart.cst.pwc.CustomFontEditText
                            android:id="@+id/year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/colorAccent"
                            android:hint="Select year"
                            android:inputType="textCapWords"
                            android:textColorHint="#c6c6c6"
                            android:textSize="@dimen/textsize"
                            app:category="@string/selectable"
                            app:choices="2017,2017,2015,Others"
                            app:fontName="maven"
                            app:tittle="year" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.75"
                        android:padding="@dimen/paddingimg"
                        android:src="@drawable/ic_bubble_chart_black_24dp"
                        android:tint="@color/colortint" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.25">

                        <EditText
                            android:id="@+id/season"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/colorAccent"
                            android:hint="Select season"
                            android:inputType="textCapWords"
                            android:textColorHint="#c6c6c6"
                            android:textSize="@dimen/textsize" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/perenniallin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.75"
                        android:padding="@dimen/paddingimg"
                        android:src="@drawable/ic_bubble_chart_black_24dp"
                        android:tint="@color/colortint" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.25">

                        <smart.cst.pwc.CustomFontEditText
                            android:id="@+id/perennial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/colorAccent"
                            android:hint="Crops grown in perennial"
                            android:inputType="textCapWords"
                            android:textColorHint="#c6c6c6"
                            android:textSize="@dimen/textsize"
                            app:category="@string/selectable"
                            app:choices="Coconut,Apple,Orange,Banana,Pomegranate,Mango,Others"
                            app:fontName="maven"
                            app:tittle="Crops grown in perennial" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/annuallin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.75"
                        android:padding="@dimen/paddingimg"
                        android:src="@drawable/ic_bubble_chart_black_24dp"
                        android:tint="@color/colortint" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.25">

                        <smart.cst.pwc.CustomFontEditText
                            android:id="@+id/annual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/colorAccent"
                            android:hint="Crops grown in annual"
                            android:inputType="textCapWords"
                            android:textColorHint="#c6c6c6"
                            android:textSize="@dimen/textsize"
                            app:category="@string/selectable"
                            app:choices="Sugarcane,Cassava,,Others"
                            app:fontName="maven"
                            app:tittle="Crops grown in annual" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rabilin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.75"
                            android:padding="@dimen/paddingimg"
                            android:src="@drawable/ic_bubble_chart_black_24dp"
                            android:tint="@color/colortint" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.25">

                            <smart.cst.pwc.CustomFontEditText
                                android:id="@+id/rabi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:hint="Crops grown - rabi"
                                android:inputType="textCapWords"
                                android:textColorHint="#c6c6c6"
                                android:textSize="@dimen/textsize"
                                app:category="@string/selectable"
                                app:choices="alfalfa (Lucerne),linseed,sesame,cumin (Cuminum cyminum),coriander (Coriandrum sativum),mustard (Brassica juncea),fennel (Foeniculum vulgare),fenugreek (Trigonella foenumgraecum),isabgol (Plantago ovata),Others"
                                app:fontName="maven"
                                app:tittle="Crops grown - rabi" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/khariflin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.75"
                            android:padding="@dimen/paddingimg"
                            android:src="@drawable/ic_bubble_chart_black_24dp"
                            android:tint="@color/colortint" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.25">

                            <smart.cst.pwc.CustomFontEditText
                                android:id="@+id/karif"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:hint="Crops grown - kharif"
                                android:inputType="textCapWords"
                                android:textColorHint="#c6c6c6"
                                android:textSize="@dimen/textsize"
                                app:category="@string/selectable"
                                app:choices="Jowar,Rice (paddy and deepwater),Millet,Maize (corn),Soyabean,turmeric,Groundnut,cotton,sugarcane,bitter gourd,linseed (flax),green gram (moong),seasome (till),arhar(toor),black gram (urad),cowpea (chavala),Others"
                                app:fontName="maven"
                                app:tittle="Crops grown - karif" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zaidlin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.75"
                            android:padding="@dimen/paddingimg"
                            android:src="@drawable/ic_bubble_chart_black_24dp"
                            android:tint="@color/colortint" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.25">

                            <smart.cst.pwc.CustomFontEditText
                                android:id="@+id/zaid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorPrimary"
                                android:hint="Crops grown - zaid"
                                android:inputType="textCapWords"
                                android:textColorHint="#c6c6c6"
                                android:textSize="@dimen/textsize"
                                app:category="@string/selectable"
                                app:choices="Water melon,cucumber,muskmelon,sunflower,Bitter gourd,Pumpkin,Others"
                                app:fontName="maven"
                                app:tittle="Crops grown - zaid" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/imglin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.75"
                            android:padding="1dp"
                            android:src="@drawable/image_placeholder"
                            app:civ_border_color="#c0c0c0"
                            app:civ_border_width="1dp" />

                        <smart.cst.pwc.CustomFontTextView
                            android:id="@+id/imagetxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.25"
                            android:backgroundTint="@color/colorAccent"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:padding="5dp"
                            android:text="Add Image"
                            android:textColorHint="#c6c6c6"
                            android:textSize="@dimen/textsize"
                            app:fontName="maven" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/r_submitlin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:orientation="vertical">

                        <smart.cst.pwc.CustomFontTextView
                            android:id="@+id/r_submittxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="20dp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>