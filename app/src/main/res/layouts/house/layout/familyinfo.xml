<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/relationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/relationship"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="father,mother,parent,son,daughter,child,husband,wife,spouse,brother,sister,sibling,grandfather,grandmother,grandparents,grandson,granddaughter,grandchild,uncle,aunt,parent's sibling,nephew,niece,sibling's child,cousin,cousin,aunt's/uncle's child"
                    app:tittle="@string/relationship" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/familyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/familyName"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/familyAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/familyAge"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices=""
                    app:tittle="@string/familyAge" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/familySex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/familySex"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Male,Female,others"
                    app:tittle="@string/familySex" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/maritalStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/maritalStatus"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Not Married,Married,Widowed,Divorced/Separated"
                    app:tittle="@string/maritalStatus" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/education"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Not Literate,Literate,Completed Class 5,Class 8th,Class 10th,Class 12th,ITI Diploma,Graduate,Post Graduate,Profession"
                    app:tittle="@string/education" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/sclCol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/sclCol"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Going to AWC,School,College,Not Going,Not Applicable"
                    app:tittle="@string/sclCol" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/aadhaarNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/aadhaarNo"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="@string/aadhaarNo" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/bank"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="@string/bank" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/computeLiterate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/computeLiterate"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="@string/computeLiterate" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/socialSecurity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/socialSecurity"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="No Pension,Old Age Pension,Widow Pension,Disability Pension,Other Pension"
                    app:tittle="@string/socialSecurity" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/majorHealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/majorHealth"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="@string/majorHealth" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/jobCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/jobCard"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Yes,No"
                    app:tittle="@string/jobCard" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/groupTick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/groupTick"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/occupationCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray"
                    android:hint="@string/occupationCode"
                    android:inputType="textCapWords"
                    android:textColorHint="#c6c6c6"
                    android:textSize="15dp"
                    app:category="@string/selectable"
                    app:choices="Farming on own Land,Sharecropping /Farming Leased Land,Animal Husbandry,Pisci-culture/Poultry,Fishing,Skilled Wage Worker,Unskilled Wage Worker,Salaried Employment in Government,Salaried Employment in Private Sector,Weaving,Other Artisan,Other Trade &amp; Business,Dependents,others"
                    app:tittle="@string/occupationCode" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:padding="12dp"
                android:text="SUBMIT"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
