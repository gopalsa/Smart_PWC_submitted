<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Issue Identified"
            android:textSize="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/proposed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Proposed Plan of Action"
            android:textSize="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <smart.cst.pwc.CustomFontEditText
            android:id="@+id/formulate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Can you formulate a project proposal on issue "
            android:textSize="15dp"
            app:category="@string/selectable"
            app:choices="Yes,No"
            app:tittle="issues"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:padding="12dp"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:textStyle="bold" />

</LinearLayout>