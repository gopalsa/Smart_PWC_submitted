<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/workingGroupSerial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Serial No"
            android:inputType="number"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/workingGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Name"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <smart.cst.pwc.CustomFontEditText
            android:id="@+id/workingGroupcoordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Coordinator/Faculty/Research Scholar/Staff/Other Students"
            android:textSize="15dp"
            app:tittle=" Coordinator/Faculty/Research Scholar/Staff/Other Student"
            app:category="@string/selectable"
            app:choices="coordinator,Faculty,research scholar,staff,other students" />/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/workingGroupDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Department"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/workingGroupContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Contact Details"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/workingGroupAreaOfInterest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="    Area of Interest/Intervention"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <smart.cst.pwc.CustomFontEditText
            android:id="@+id/workingGroupSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Would he/she be interested in Participating Subject Area Group"
            android:textSize="15dp"
            app:category="@string/selectable"
            app:choices="Yes,No"
            app:tittle="interested in Participating Subject Area Group"/>
    </android.support.design.widget.TextInputLayout>



    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:padding="12dp"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:textStyle="bold" />
</LinearLayout>