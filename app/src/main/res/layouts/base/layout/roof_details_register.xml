<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/natural"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Natural Roofing"
                    android:textSize="15dp"
                    android:textColorHint="#ffc6c6c6"
                    android:backgroundTint="@color/gray"
                    app:tittle="Natural Roofing"
                    app:category="@string/selectable"
                    app:choices="No roofing,Thatch/palm/Grass,Mud,Plastic/polythene sheets" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <smart.cst.pwc.CustomFontEditText
                android:id="@+id/rudimentary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Rudimentary Roofing"
                android:textColorHint="#ffc6c6c6"
                android:textSize="15dp"
                android:backgroundTint="@color/gray"
                app:tittle="Rudimentary Roofing"
                app:category="@string/selectable"
                app:choices="Rustic Mat,Bamboo,Wood planks,Stones,Unbur ned Bricks" />
        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <smart.cst.pwc.CustomFontEditText
                    android:id="@+id/finished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Finished Roofing"
                    android:textColorHint="#ffc6c6c6"
                    android:textSize="15dp"
                    android:backgroundTint="@color/gray"
                    app:tittle="Finished Roofing"
                    app:category="@string/selectable"
                    app:choices="Metal/GI,Wood,Cement Fibre,Asbestos sheets,RRC/RBC/Cement/Concrete,Tiles,Slate,Burnt Brick,others" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:textSize="15dp"
                android:padding="12dp"
                android:text="SUBMIT"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
