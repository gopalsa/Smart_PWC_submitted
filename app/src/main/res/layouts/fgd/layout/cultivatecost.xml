<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        >

        <smart.cst.pwc.CustomFontEditText
            android:id="@+id/factors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            app:category="@string/selectable"
            app:tittle="Factors"
            app:choices="a. Land preparation,b. Seed / planting material,c. Fertilizer+FYM,d. Insecticide,e. Fungicide,f. Weedicide,g. Intercultural operation,h. Family Labor,i. Other hired labour,j. Irrigation,k. Operating Farm Equipmentâ€™s,l. Harvesting,m. Total Cost"
            android:textSize="15dp"
            android:hint="Factors" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cropone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crop 1"
            android:textSize="15dp"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:inputType="numberDecimal"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/croptwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crop 2"
            android:textSize="15dp"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:inputType="numberDecimal"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cropthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crop 3"
            android:textSize="15dp"
            android:textColorHint="#ffc6c6c6"
            android:backgroundTint="@color/gray"
            android:inputType="numberDecimal"/>
    </android.support.design.widget.TextInputLayout>



    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:textSize="15dp"
        android:padding="12dp"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:textStyle="bold" />

</LinearLayout>
